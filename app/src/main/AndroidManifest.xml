<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gitmad.bitter" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BitterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name=".activity.FeedActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.UserActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/title_activity_test">
        </activity>
        <activity
            android:name=".activity.ViewPostActivity"
            android:label="@string/title_activity_view_post"
            android:parentActivityName=".activity.FeedActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gitmad.bitter.activity.FeedActivity" />
        </activity>
    </application>
</manifest>
